{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2021",

    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "declaration": true,

    "jsx": "react-jsx",
    "jsxImportSource": "preact",

    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {},
    "lib": ["ES2021"]
  },
  "include": ["src/**/*"]
}
